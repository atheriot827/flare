{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "module": "es6",
      "moduleDetection": "force",
      "moduleResolution": "node",
      "target": "es5",
      "allowJs": true,
      "jsx": "react",
      "esModuleInterop": true,
  },
  "include": [
      "./src/**/*",
      ".eslintrc.js",
  ]
}